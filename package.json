{
  "name": "live-sync-classroom",
  "version": "1.0.0",
  "description": "A collaborative tool for instant real-time updates across multiple users",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && node --watch index.js",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "server": "cd server && node index.js"
  },
  "keywords": [
    "collaborative",
    "real-time",
    "websocket",
    "classroom",
    "sticky-notes",
    "polling"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.5.4",
    "cors": "^2.8.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
